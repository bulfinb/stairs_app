#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
    id: manager
	transition: SlideTransition()
	MainScreen:
	StraightScreen:
    CornerScreen:
    TwoCornerScreen:
	
<MainScreen>:
	name: "main"
    BoxLayout:
        orientation: 'vertical'
	    Button:
		    on_release: app.root.current = "straight"
		    text: "Straight stairs"
		    font_size: 50
        Button:
		    on_release: app.root.current = "corner"
		    text: "Corner stairs"
		    font_size: 50  
        Button:
		    on_release: app.root.current = "twocorner"
		    text: "Two corner stairs"
		    font_size: 50 
		
<StraightScreen>:
	name: "straight"
	StraightStairsM	

<CornerScreen>		
	name: "corner"
	CornerStairsM	

<TwoCornerScreen>		
	name: "twocorner"
	TwoCornerStairsM
